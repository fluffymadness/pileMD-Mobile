<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    package="com.fluffymadness.pilemdMobile.ui">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:replace="android:theme">
        <activity
            android:name="com.fluffymadness.pilemdMobile.ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fluffymadness.pilemdMobile.ui.SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
        <activity
            android:name="com.fluffymadness.pilemdMobile.ui.EditorActivity"
            android:label=""></activity>
        <activity
            android:theme="@style/AppFullScreenTheme"
            android:name="com.fluffymadness.pilemdMobile.ui.ViewNote"
            android:label="@string/title_view_note"></activity>
        <activity android:name="net.rdrei.android.dirchooser.DirectoryChooserActivity" />

    </application>

</manifest>